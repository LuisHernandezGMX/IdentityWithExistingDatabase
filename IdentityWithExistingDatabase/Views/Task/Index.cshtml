@model IEnumerable<IdentityWithExistingDatabase.Models.DAL.Entities.Task>
@{
    ViewBag.Title = "Tasks";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Tasks</h1>
        <br>
        @Html.ActionLink("Create New Task", "Create", "Task", new { @class = "btn btn-primary" })
        <br><br>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="table-responsive">
            @if (Model.Count() == 0) {
                <p class="text-info">No tasks available :(</p>
            } else {
                <table class="table table-condensed table-striped" style="font-size:8pt">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model) {
                            <tr>
                                <td>@Html.ActionLink(task.Id.ToString(), "Details", new { id = task.Id })</td>
                                <td>@task.Description</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Description</th>
                        </tr>
                    </tfoot>
                </table>
            }
        </div>
    </div>
</div>
