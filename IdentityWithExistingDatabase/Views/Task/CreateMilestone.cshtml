@model IdentityWithExistingDatabase.Models.ViewModels.Task.CreateMilestoneViewModel
@{
    ViewBag.Title = "Create New Milestone";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Create New Milestone</h1>
        <br>
        @Html.ActionLink("Go Back", "Details", new { id = ViewBag.TaskId }, new { @class = "btn btn-warning" })
        <br><br>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.Hidden("taskId", (int)ViewBag.TaskId)

            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Finished, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Finished)
                @Html.ValidationMessageFor(model => model.Finished, "", new { @class = "text-danger" })
            </div>
            <input type="submit" value="Create Milestone" class="btn btn-success" />
        }
    </div>
</div>